
<% include('head', {title: 'New comment', id: 'addnew'}) %> 

<nav>
    <ul class="flexbox">
        <%- include('logo') %>
        <%- include('logged-in', {loggedInUser: loggedInUser}) %>
        <%- include('useroperations', {loggedInUser: loggedInUser}) %>
    </ul>
</nav>

<%- inlude('title-container', {title: 'Comment or rate spacecraft'}) %>

<main class="content">
    <div class="container">
        <div class="row">
            <div class="col-12 center">
                <div class="input-container">
                    
                    <% if(typeof error.message !== 'undefined') { %>  
                        
                        <div class="error-message">
                            <p class="cyan"><%= error.message %></p>
                        </div>

                    <% } %>

                    <form method="post" action="/comments/<%= spacecraft._id %>/new">
                        <div class="input-field">
                            <input id="spacecraft-comment-title" name="title" required value="<% typeof comment !== 'undefined' ? res.locals.comment.title : ''%>"/>
                            <label for="spacecraft-comment-title">Title of comment</label>
                        </div>
                        <div class="input-field">
                            <input id="spacecraft-comment" name="text" required value="<% typeof comment !== 'undefined' ? res.locals.comment.text : ''%>"/>
                            <label for="spacecraft-comment">Comment</label>
                        </div>
                        <div class="input-field">
                            <input id="spacecraft-rating" name="rating" type="number" required min="1" max="5" value="<%= typeof comment !== 'undefined' ? res.locals.comment.rating : 1%>"/>
                            <label for="spacecraft-rating">Rating</label>
                        </div>
                        <div class="add-buttons flexbox">
                            <a class="btn btn-darks" href="/spaceraft/<%= spacecraft._id %>/details">Cancel</a>
                            <input class="btn btn-darks" type="submit" value="Add">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('footer') %> 

<script src="/js/userops.js"></script>

<%- include('closing') %> 
