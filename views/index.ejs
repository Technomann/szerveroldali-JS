
<%- include ('head', {pagetitle: 'Welcome!', id: 'login'}) %> 

<nav>
    <ul class="flexbox">
        <%- include('logo') %> 
    </ul>
</nav>

<%- include ('title-container', {title: 'Login or register'}) %> 

<main class="content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <a id="login-button" class="btn btn-darks">
                    Login
                </a>
                <a id="register-button" class="btn btn-darks">
                    Register
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12 center">
                <div id="login-container" class="input-container">
                    
                    <% if(typeof error.message !== 'undefined') { %>  
                        <div class="error-message">
                            <p class="cyan"><%= error.message %></p>
                        </div>
                    <% } %>

                    <form id="login-form" method="post" action="/login">
                        <div class="input-field">
                            <input id="username" name="username" type="text" required>
                            <label for="username">Your username</label>
                        </div>
                        <div class="input-field">
                            <input id="password" name="password" type="password" required>
                            <label for="password">Your password</label>
                        </div>
                        <div class="center">
                            <input class="btn btn-darks size-80" type="submit" value="Login">
                            <a class="forgotten-password btn btn-darks size-80" href="/forgot" >Forgot password?</a>
                        </div>
                    </form>

                    <form id="register-form" method="post" enctype="multipart/form-data" action="/register">
                        <div class="input-field">
                            <input id="username-reg" type="text" required >
                            <label for="username-reg">Username</label>
                        </div>
                        <div class="input-field">
                            <input id="email-reg" type="email" required >
                            <label for="email-reg">E-mail</label>
                        </div>
                        <div class="input-field">
                            <input id="password-reg" type="password" required >
                            <label for="password-reg">Password</label>
                        </div>
                        <div class="input-field">
                            <input id="password-again-reg" type="password" required >
                            <label for="password-again-reg">Password again</label>
                        </div>
                        <div class="center">
                            <input class="btn btn-darks size-80" type="submit" value="Register">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/js/login.js" type="application/javascript"></script>

<%- include ('footer') %> 
<%- include ('closing') %> 